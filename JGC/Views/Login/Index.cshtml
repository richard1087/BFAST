
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="login_content">
            <!-- LOGO JGC START -->
            <div class="mgbtm60">
                <img src="~/Content/res/build/images/logo.png" class="img-responsive img-logo-custom">
            </div>
            <!-- LOGO JGC END -->
            <!-- FORM LOGIN START -->
            @using (Html.BeginForm())
            {
            @*<form>*@
                <!-- <h1>Login JGC Asset</h1> -->
                <div>
                    <input id="Username" name="UserName" type="text" class="form-control" placeholder="Username" required="" />
                </div>
                <div>
                    <input id="Password" name="Password" type="password" class="form-control" placeholder="Password" required="" />
                </div>
                <div>
                    <button id="loginbtn" name="loginbtn" type="submit" class="btn btn-default btn-block btn-logincustom submit">Login</button>
                    <a class="resetcustom" href="#">Lost your password?</a>
                </div>
                
                if (ViewBag.Error == "0")
                {
                <!-- ALERT START -->
                <div class="alert alert-warning alert-dismissible" role="alert" id="alertlogin">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    UserName or Password wrong !!
                </div>
                <!-- ALERT END -->
                }
                else if (ViewBag.Error == "1")
                {
                <!-- ALERT START -->
                <div class="alert alert-warning alert-dismissible" role="alert" id="alertlogin">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    Account is not Exists !!
                </div>
                <!-- ALERT END -->
                }
                else if (ViewBag.Error != null)
                {
                <!-- ALERT START -->
                <div class="alert alert-warning alert-dismissible" role="alert" id="alertlogin">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    @ViewBag.Error
                </div>
                <!-- ALERT END -->
                }
            @*</form>*@
            }
            <!-- FORM LOGIN END -->
        </section>
    </div>
    
</div>

<script src="~/Content/res/vendors/jquery/dist/jquery.min.js"></script>
<script src="~/Content/res/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
<script>
      $(document).ready(function(){
          $(".close").click(function(){
              $("#alertlogin").alert("close");
          });
      });
</script>
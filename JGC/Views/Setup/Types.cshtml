                            <input id="EditTypeNameId" type="text" name="Type Name" class="form-control col-md-10" value="Type Name" placeholder="Type Name" />
                        </div>
                    </div>

                    <div class="ln_solid col-md-12 col-sm-12 col-xs-12"></div>
                    <div class="form-group col-md-12 col-sm-12 col-xs-12 pdlr0">
                        <div class="row col-md-12 col-sm-12 col-xs-12 pdlr0" style="text-align:right;">
                            <button id="EditTypeId" type="button" class="btn btn-primary" onclick="InputEditType(); return false;">Edit</button>

    function UpdatePersonS(NoID, EmployeeId, FullName, Title, Phone, Email, SiteCode, SiteName, LocationCode, LocationName, DeptCode, DeptName, Notes, Aktif) {
        if (Aktif == "Y") {
            $(".icheckbox_flat-green").addClass('checked');
        }

        $(".modal-body #NoID").val(NoID);

        $(".modal-body #EditEmployeeId").val(EmployeeId);
        $(".modal-body #EditFullNameId").val(FullName);

        $(".modal-body #EditTitleId").val(Title);
        $(".modal-body #EditPhoneId").val(Phone);

        $(".modal-body #EditEmailId").val(Email);
        $(".modal-body #EditSiteCode").val(SiteCode);
        $(".modal-body #EditSiteName").val(SiteName);

        $(".modal-body #EditLocationCode").val(LocationCode);
        $(".modal-body #EditLocationName").val(LocationName);
        $(".modal-body #EditDepartmentCode").val(DeptCode);
        $(".modal-body #EditDepartmentName").val(DeptName);
        $(".modal-body #EditNotesId").val(Notes);

        $("#editModal").modal();
    }

    function CancelData(jenis) {
        if (jenis == '1') {

            $(".modal-body #SiteCode").val('');

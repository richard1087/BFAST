@model CORE.JGC.Models.MsCompany[]
@{
    ViewBag.Title = "List Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function UpdateCompany(CompanyID) {
        $.ajax({
            url: '@Url.Action("UpdateDataCompany", "Setup")',
            type: 'post',
            cache: false,
            async: true,
            data: { CompanyID: CompanyID },
            success: function (response) {
                window.location.href = "@Url.Action("Updatecompany","Setup")";
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                $(".modal-body #peringatan1").text("Mohon Tunggu...");
                $('#btncaution').click(function (e) {
                    $('#Alert1').modal('hide');
                })
                $("#Alert1").modal();
            }
        });
    }
</script>
<div class="right_col" role="main">
    <div class="">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="menusect">
                        <h5>
                            Setup •
                            <a href="/setup/companyinfo" class="activemenu">List Company</a>
                        </h5>
                    </div>
                    <div class="x_title">
                        <h2>List of Company</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="col-md-12 col-sm-12 col-xs-12 text-muted font-13 m-b-30 no-padding">
                            <div class="mgbtm20">
                                <a href="/setup/createcompany" class="btn btn-success btn-cust">Add New Company</a>
                            </div>
                        </div>
                        <table id="datatable" class="table table-striped table-bordered bulk_action">
                            <thead>
                                <tr>
                                    <th style="width:9% !important;">@Html.Label("Company Code")</th>
                                    <th style="width:15% !important;">@Html.Label("Company Name")</th>
                                    <th style="width:20% !important;">@Html.Label("Address")</th>
                                    <th style="width:9% !important;">@Html.Label("City")</th>
                                    <th style="width:10% !important;">@Html.Label("Province")</th>
                                    <th style="width:5% !important;">@Html.Label("Postal Code")</th>
                                    <th style="width:10% !important;">@Html.Label("Telephone")</th>
                                    <th style="width:9%;"></th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.CompanyCode)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Province)</td>
                                    <td>@Html.DisplayFor(modelItem => item.PostalCode)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Telephone)</td>
                                    <td style="width:5% !important;text-align:center;">
                                        <button id="ubah" name="ubah" data-toggle="tooltip" title="Ubah" type="button" class="btn btn-success" onclick="UpdateCompany('@Html.DisplayFor(modelItem => item.Id)')"><span class="glyphicon glyphicon-edit"></span>&nbsp;</button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@RenderPage("~/Views/Shared/_FooterLayout.cshtml")

<script type="text/javascript">
      
      $("#check-all").click(function () {
          $(".checks").prop('checked', $(this).prop('checked'));
      });

</script>

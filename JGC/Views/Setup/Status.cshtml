        } else if (EditStatusNameId == "") {
            $(".modal-body #peringatan3").text("Status Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

</script>


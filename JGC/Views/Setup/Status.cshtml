<script type="text/javascript">

    function InputStatus() {
        var StatusId = document.getElementById("StatusId").value;
        var StatusNameId = document.getElementById("StatusNameId").value;

        if (StatusId == "") {
            $(".modal-body #peringatan3").text("Status harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        } else if (StatusNameId == "") {
            $(".modal-body #peringatan3").text("Status Name harus diisi");
            $('#btnerror').click(function (e) {
                $('#Alert3').modal('hide');
            })
            $("#Alert3").modal();
        }
    }

    function InputEditStatus() {
        var EditStatusId = document.getElementById("EditStatusId").value;
        var EditStatusNameId = document.getElementById("EditStatusNameId").value;

        if (EditStatusId == "") {
